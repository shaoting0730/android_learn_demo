<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_329dp"
        android:scaleType="fitXY"
        android:src="@mipmap/login" />
    <!--    登录view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_230dp"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:layout_marginTop="@dimen/dimen_278dp"
        android:layout_marginEnd="@dimen/dimen_18dp"
        android:background="@drawable/shape_login_form"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="43dp"
        android:paddingEnd="31dp">
        <!--        用户名输入框View-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:src="@mipmap/account" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:background="@null"
                android:hint="@string/account_hint"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#bcbcbc"
                android:textSize="18sp" />

        </LinearLayout>
        <!--        分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_23dp"
            android:layout_marginBottom="@dimen/dimen_23dp"
            android:background="#5E4F4F" />
        <!--        密码输入框View-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:src="@mipmap/pwd" />

            <EditText
                android:id="@+id/et_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:background="@null"
                android:hint="@string/pwd_hint"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#000000"
                android:textColorHint="#bcbcbc"
                android:textSize="@dimen/size_18sp" />

        </LinearLayout>

    </LinearLayout>
    <!--    登录按钮-->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginRight="@dimen/dimen_50dp"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:background="@drawable/shape_big_login_btn"
        android:text="@string/login"
        android:textSize="@dimen/size_18sp" />

</RelativeLayout>